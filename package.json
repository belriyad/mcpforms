{
  "name": "mcpforms",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:emulators": "firebase emulators:start",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:emulators\"",
    "build": "next build",
    "build:local": "next build && firebase emulators:start --only hosting",
    "start": "next start",
    "lint": "next lint",
    "export": "next build; next export",
    "deploy": "npm run build; firebase deploy --only hosting",
    "deploy:local": "npm run build; firebase emulators:start",
    "deploy:all": "npm run build; firebase deploy",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:mcp": "playwright test tests/mcp-*.spec.ts",
    "test:mcp-ui": "playwright test --ui tests/mcp-*.spec.ts",
    "test:mcp:production": "playwright test tests/mcp-production.spec.ts",
    "test:firebase": "playwright test tests/mcp-firebase-integration.spec.ts",
    "test:components": "playwright test tests/mcp-ui-components.spec.ts",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:workflow": "playwright test tests/complete-workflow-with-docs.spec.ts tests/form-filling-automation.spec.ts",
    "test:workflow:headed": "playwright test tests/complete-workflow-with-docs.spec.ts tests/form-filling-automation.spec.ts --headed",
    "automation:full": "node run-complete-workflow.js",
    "automation:powershell": "powershell -ExecutionPolicy Bypass -File run-complete-workflow.ps1",
    "automation:headed": "powershell -ExecutionPolicy Bypass -File run-complete-workflow.ps1 -Headed",
    "automation:debug": "powershell -ExecutionPolicy Bypass -File run-complete-workflow.ps1 -Debug -Headed"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@tinymce/tinymce-react": "^6.3.0",
    "adm-zip": "^0.5.16",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "docx": "^9.5.1",
    "docxtemplater": "^3.66.6",
    "file-saver": "^2.0.5",
    "firebase": "^10.14.1",
    "framer-motion": "^10.16.4",
    "html-docx-js-typescript": "^0.1.5",
    "jszip-utils": "^0.1.0",
    "lucide-react": "^0.544.0",
    "mammoth": "^1.11.0",
    "next": "^14.2.33",
    "node-fetch": "^2.7.0",
    "openai": "^6.2.0",
    "pdf-parse": "^2.1.7",
    "pizzip": "^3.2.0",
    "quill": "^2.0.3",
    "react": "^18",
    "react-dom": "^18",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-quill": "^2.0.0",
    "resend": "^6.1.2",
    "tailwind-merge": "^3.3.1",
    "tinymce": "^8.1.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@playwright/mcp": "^0.0.40",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^9.0.7",
    "autoprefixer": "^10.0.1",
    "dotenv": "^17.2.3",
    "eslint": "^8",
    "eslint-config-next": "14.0.3",
    "firebase-admin": "^13.5.0",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
