{
  "name": "functions",
  "version": "1.0.0",
  "description": "Firebase Functions for Smart Forms AI",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --ext .js,.ts . --fix",
    "test": "npm run build && mocha --require ts-node/register 'test/**/*.test.ts' --timeout 30000",
    "test:watch": "npm run build && mocha --require ts-node/register 'test/**/*.test.ts' --timeout 30000 --watch",
    "test:integration": "npm run build && mocha --require ts-node/register 'test/integration/**/*.test.ts' --timeout 60000"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "class-variance-authority": "^0.7.1",
    "cors": "^2.8.5",
    "docx": "^9.5.1",
    "docxtemplater": "^3.66.5",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "lucide-react": "^0.544.0",
    "mammoth": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pizzip": "^3.2.0",
    "sharp": "^0.32.6",
    "tailwind-merge": "^3.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.20",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.18",
    "@types/mocha": "^10.0.10",
    "@types/multer": "^1.4.8",
    "@types/pdf-parse": "^1.1.5",
    "@types/sinon": "^17.0.4",
    "@types/uuid": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "chai": "^4.5.0",
    "eslint": "^8.50.0",
    "eslint-plugin-import": "^2.28.1",
    "firebase-functions-test": "^3.1.0",
    "mocha": "^10.8.2",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  },
  "private": true
}
