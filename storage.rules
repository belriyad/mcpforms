rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Templates - Admin only
    match /templates/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.email_verified == true;
    }
    
    // Generated documents - Admin only
    match /generated-documents/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.email_verified == true;
    }
    
    // Temporary uploads - Public write for intake process
    match /temp-uploads/{allPaths=**} {
      allow read, write: if true;
    }
  }
}