rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Templates collection - Admin only
    match /templates/{templateId} {
      allow read, write: if request.auth != null && request.auth.token.email_verified == true;
    }
    
    // Services collection - Admin only
    match /services/{serviceId} {
      allow read, write: if request.auth != null && request.auth.token.email_verified == true;
    }
    
    // Intakes collection - Public read/write for specific intake, Admin full access
    match /intakes/{intakeId} {
      allow read, write: if true; // Public access for intake forms
      allow read, write: if request.auth != null && request.auth.token.email_verified == true; // Admin access
    }
    
    // Document Artifacts collection - Admin only
    match /documentArtifacts/{artifactId} {
      allow read, write: if request.auth != null && request.auth.token.email_verified == true;
    }
    
    // User profiles - User can manage their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}